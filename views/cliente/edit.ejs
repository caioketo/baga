<script>
	var clienteID = '<%= cliente.id %>';
	$("#rut").rut().on('rutInvalido', function(e) {
		//alert("El rut " + $(this).val() + " es inv√°lido");
		$("#rut").addClass("invalid");
	}).on('rutValido', function (e) {
		$("#rut").removeClass("invalid");
	});

	var tabelasDePreco = <%- JSON.stringify(tabelasPreco) %>;

	tabelasDePreco.forEach(function (item, index) {
		$('#tabelasPreco')
	    	.append($("<option></option>")
	        .attr("value",item.id)
	        .text(item.descricao)); 
	});

	<% if (typeof cliente.tabelaPreco !== 'undefined') { %>
		$('#tabelasPreco').val('<%= cliente.tabelaPreco.id %>');
	<% } %>
</script>